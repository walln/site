---
import { Icon } from "astro-icon/components";

// TODO: Addo all other links
const socialLinks: {
	friendlyName: string;
	link: string;
	name: string;
}[] = [
	{
		friendlyName: "Github",
		link: "https://github.com/walln",
		name: "mdi:github",
	},
	{
		friendlyName: "Twitter",
		link: "https://twitter.com/nickwal",
		name: "mdi:twitter",
	},
	{
		friendlyName: "LinkedIn",
		link: "https://www.linkedin.com/in/nicholasewall",
		name: "mdi:linkedin",
	},
	{
		friendlyName: "Email",
		link: "mailto:walln@hey.com",
		name: "mdi:email",
	},
];
---

<div class="flex flex-wrap gap-x-2 items-center">
	<p class="uppercase">Find me on</p>
	<ul class="flex flex-1 items-center gap-x-2 sm:flex-initial">
		{
			socialLinks.map(({ friendlyName, link, name }) => (
				<li class="flex">
					<a
						class="inline-block p-1 text-link sm:hover:text-accent-2"
						href={link}
						rel={`noopener noreferrer`}
						target="_blank"
					>
						<Icon
							aria-hidden="true"
							class="h-6 w-6"
							focusable="false"
							name={name}
						/>
						<span class="sr-only">{friendlyName}</span>
					</a>
				</li>
			))
		}
	</ul>
</div>
